<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <androidx.cardview.widget.CardView
            android:id="@+id/cardView_Game_Background"
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:elevation="10dp"
            android:scaleType="centerCrop"
            app:cardCornerRadius="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:layout_editor_absoluteX="8dp">

            <ImageView
                android:id="@+id/imageView_Game_Background"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:scaleType="centerCrop"
                tools:src="@tools:sample/backgrounds/scenic" />
        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:id="@+id/cardView_Game_Logo"
            android:layout_width="141dp"
            android:layout_height="193dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="130dp"
            android:layout_marginBottom="16dp"
            android:elevation="10dp"
            android:scaleType="centerCrop"
            app:cardCornerRadius="8dp"
            app:layout_constraintBottom_toTopOf="@+id/textView_Game_Title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/imageView_Game_Logo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:scaleType="centerCrop"
                tools:src="@tools:sample/backgrounds/scenic" />
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/textView_Game_Title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="8dp"
            android:text="Nome del gioco"
            android:textColor="@color/white"
            android:textSize="34sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cardView_Game_Logo" />


        <ImageView
            android:id="@+id/imageView_border_rating"
            android:layout_width="87dp"
            android:layout_height="35dp"
            android:layout_marginStart="160dp"
            android:layout_marginTop="68dp"
            android:src="@drawable/rounded_corner_scrollview"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cardView_Game_Background"
            tools:ignore="MissingConstraints" />


        <ImageView
            android:id="@+id/imageView_border_release_date"
            android:layout_width="200dp"
            android:layout_height="35dp"
            android:layout_marginStart="160dp"
            android:layout_marginTop="15dp"
            android:src="@drawable/rounded_corner_scrollview2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cardView_Game_Background"
            tools:ignore="MissingConstraints" />

        <ImageView
            android:id="@+id/imageView_Game_Rating"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="33dp"
            android:visibility="visible"
            app:layout_constraintStart_toEndOf="@+id/cardView_Game_Logo"
            app:layout_constraintTop_toBottomOf="@+id/imageView_Game_ReleaseDate"
            app:srcCompat="@drawable/round_star_border_25"
            tools:srcCompat="@drawable/round_star_border_25" />

        <TextView
            android:id="@+id/textView_Game_Rating"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="0dp"
            android:layout_marginTop="30dp"
            android:text="Rating"
            android:textColor="@color/black"
            android:textSize="18dp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@id/imageView_Game_Rating"
            app:layout_constraintTop_toBottomOf="@id/imageView_Game_ReleaseDate" />

        <ImageView
            android:id="@+id/imageView_Game_ReleaseDate"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="22dp"
            android:visibility="visible"
            app:layout_constraintStart_toEndOf="@id/cardView_Game_Logo"
            app:layout_constraintTop_toBottomOf="@id/cardView_Game_Background"
            app:srcCompat="@drawable/calendar_24"
            tools:srcCompat="@drawable/calendar_24" />

        <TextView
            android:id="@+id/textView_Game_ReleaseDate"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_marginTop="22dp"
            android:text="ReleaseDate"
            android:textAlignment="viewStart"
            android:textColor="@color/black"
            app:layout_constraintStart_toEndOf="@id/imageView_Game_ReleaseDate"
            app:layout_constraintTop_toBottomOf="@+id/cardView_Game_Background"
            tools:layout_editor_absoluteX="279dp" />

        <ImageView
            android:id="@+id/imageView_Game_PlayTime"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="22dp"
            android:visibility="visible"
            app:layout_constraintStart_toEndOf="@id/textView_Game_ReleaseDate"
            app:layout_constraintTop_toBottomOf="@id/cardView_Game_Background"
            app:srcCompat="@drawable/timer_24"
            tools:srcCompat="@drawable/timer_24" />

        <TextView
            android:id="@+id/textView_Game_PlayTime"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_marginStart="2dp"
            android:layout_marginTop="22dp"
            android:text="PlayTime"
            android:textAlignment="viewStart"
            android:textColor="@color/black"
            app:layout_constraintStart_toEndOf="@+id/imageView_Game_PlayTime"
            app:layout_constraintTop_toBottomOf="@+id/cardView_Game_Background" />

        <TextView
            android:id="@+id/textView_Pre_Game_Genre"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="8dp"
            android:text="@string/category"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textView_Game_Title" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/ReclyclerView_Game_Genre"
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/textView_Pre_Game_Genre" />


        <TextView
            android:id="@+id/textView_Pre_Game_Platform"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="8dp"
            android:text="@string/platform"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/ReclyclerView_Game_Genre" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/ReclyclerView_Game_Platform"
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/textView_Pre_Game_Platform" />

        <TextView
            android:id="@+id/textView_Pre_Game_Description"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="8dp"
            android:text="@string/description"
            android:textColor="@color/white"
            android:textSize="25sp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/ReclyclerView_Game_Platform" />


        <TextView
            android:id="@+id/textView_Game_Description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:text="Qui verra visualizzata la descrizione del gioco"
            android:textColor="@color/white"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textView_Pre_Game_Description" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/ReclyclerView_Game_Publisher"
            android:layout_width="match_parent"
            android:layout_height="145dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/textView_Game_Description"
            tools:layout_editor_absoluteX="0dp" />

        <Button
            android:id="@+id/button_favourite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="90dp"
            android:layout_marginTop="32dp"
            app:layout_constraintStart_toStartOf="@id/imageView_border_rating"
            app:layout_constraintTop_toBottomOf="@id/cardView_Game_Background"
            style="?attr/materialIconButtonStyle"
            android:layout_alignParentRight="true"
            android:drawableBottom="@drawable/favorite_black_24dp"/>


        <Button
            android:id="@+id/button_delete_favourite"
            style="?attr/materialIconButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="32dp"
            android:layout_marginStart="55dp"
            android:drawableBottom="@drawable/heart_broken_black_24dp"
            app:layout_constraintStart_toStartOf="@+id/button_favourite"
            app:layout_constraintTop_toBottomOf="@id/cardView_Game_Background" />/>



    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>

